<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.smartcar.team4.controller.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_turnRight"
        android:elevation="0dp"
        android:fontFamily="sans-serif-medium"
        android:width="200dp"
        android:height="100dp"
        android:text="Turn Right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_turnLeft"
        android:elevation="0dp"
        android:fontFamily="sans-serif-medium"
        android:width="200dp"
        android:height="100dp"
        android:text="Turn Left"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button_turnRight"
        android:layout_toStartOf="@+id/button_turnRight" />

    <TextView
        android:text="test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/test_output"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button_turnLeft"
        android:layout_toEndOf="@+id/button_turnLeft"
        android:layout_marginLeft="63dp"
        android:layout_marginStart="63dp"
        android:textColor="#000000" />

    <SeekBar
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="3"
        android:id="@+id/seekBar2"
        android:progressTint="#000000"
        android:duplicateParentState="false"
        android:pointerIcon="none"
        android:fadeScrollbars="false"
        android:elevation="0dp"
        android:layout_toLeftOf="@+id/test_output"
        android:layout_alignLeft="@+id/button_turnLeft"
        android:layout_alignStart="@+id/button_turnLeft"
        android:layout_alignTop="@+id/test_output" />

</RelativeLayout>
